@model DateTime?

@if (Model.HasValue)
{
    @Html.TextBox("", Model.Value.ToString("yyyy-MM-dd"), new
    {
        @class = "form - control text - box single - line",
        type = "date"
    })
}
else
{
    @Html.TextBox("", null, new
    {
    @class = "form - control text - box single - line",
    type = "date"
    })
}
